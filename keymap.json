// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "f11": "debugger::StepInto"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown"
      // ... or other keybindings
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious",
      "ctrl-e": "editor::Cancel"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      // "j k": "vim::NormalBefore"
      "ctrl-i": "editor::ShowCompletions",
      "ctrl-f": "vim::NextWordStart",
      "ctrl-b": "vim::PreviousWordStart",
      "ctrl-j": "vim::Down",
      "ctrl-k": "vim::Up",
      "ctrl-h": "vim::Left",
      "ctrl-l": "vim::Right",
      "escape": ["action::Sequence", ["editor::Format", "vim::NormalBefore"]]
    }
  },
  {
    "context": "Editor && VimControl && !menu",
    "bindings": {
      "enter": "command_palette::Toggle",
      "shift-l": "vim::EndOfLineDownward",
      "shift-h": "vim::StartOfLineDownward",
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward",
      "space f o": "projects::OpenRecent",
      "space f a": "project_symbols::Toggle",
      "space f 1": "editor::FoldAtLevel_1",
      "space f 2": "editor::FoldAtLevel_2",
      "space f 3": "editor::FoldAtLevel_3",
      "space f 4": "editor::FoldAtLevel_4",
      "space f 5": "editor::FoldAtLevel_5",
      "space f 6": "editor::FoldAtLevel_6",
      "space f 7": "editor::FoldAtLevel_7",
      "space f 8": "editor::FoldAtLevel_8",
      "space f 9": "editor::FoldAtLevel_9",
      "space t t": "project_panel::ToggleFocus",
      "space b": "workspace::ToggleLeftDock",
      "space B": "workspace::ToggleRightDock",
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-l": "workspace::ActivatePaneRight",
      "space t s": "task::Spawn"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space f m": "editor::Format",
      "shift-y": ["workspace::SendKeystrokes", "y $"],
      "g r": "editor::FindAllReferences",
      "] b": "vim::GoToTab",
      "[ b": "vim::GoToPreviousTab"
      // "escape": "editor::Format"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !menu",
    "bindings": {
      ">": ["workspace::SendKeystrokes", "> g v"],
      "<": ["workspace::SendKeystrokes", "< g v"],
      "alt-s": "vim::PushAddSurrounds"
    }
  },
  {
    "context": "Editor && edit_prediction_conflict",
    "bindings": {
      "alt-f": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "alt-f": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "debugger_stopped",
    "bindings": {
      "f10": "debugger::StepOver"
    }
  },
  {
    "context": "!debugger_stopped",
    "bindings": {
      "f11": "zed::ToggleFullScreen"
    }
  }
]
